

  <!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Blog</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
  </head>
  <body>
    <div class="container">
        <h1 class="mb-4"> Blog Articles</h1>
        <a href="/articles/new" class="btn btn-success"> New Article
    
        </a>

        <% articles.forEach(articles =>{ %>
            <div class="card mt-4">
                <div class="card-body">
                    <h4 class="card-tilte"> <%= articles.title %></h4>
                    <div class="card-subtitle text-muted mb-2">
                        <%= articles.createdAt.toLocaleDateString() %>
                    </div>
                    <div class="card-text mb-2"><%= articles.description %>
                    </div>
                </div>
               
            </div>
       <% }) %>
      </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
  </body>
</html>















